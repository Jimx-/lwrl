{
  "agent": {
    "type": "dqn_agent",

    "state_spec": {
      "low": 0,
      "high": 255,
      "shape": [4]
    },

    "action_spec": {
      "n": 2
    },

    "network_spec": [
      {
        "type": "dense",
        "in_features": 4,
        "out_features": 64,
        "activation": "relu"
      }
    ],

    "optimizer": {
      "type": "Adam",
      "args": {
        "lr": 0.001
      }
    },

    "exploration_schedule": {
      "type": "linear",
      "args": {
        "initial": 1.0,
        "final": 0.02,
        "steps": 10000
      }
    },

    "memory": {
      "type": "sequential",
      "args": {
        "max_length": 50000,
        "history_length": 1
      }
    },

    "history_length": 1,
    "learning_starts": 1000,
    "train_freq": 1,
    "update_target_freq": 500,
    "batch_size": 32,
    "discount_factor": 1.0,
    "clip_error": 10.0,
    "double_q_learning": false
  },

  "environment": {
    "type": "gym",
    "train": {
      "id": "CartPole-v0"
    }
  }
}
